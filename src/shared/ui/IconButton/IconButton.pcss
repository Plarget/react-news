@import "@/shared/styles/mixins.pcss";
@import "@/shared/styles/media.pcss";

.icon-button {
    height: 35px;
    padding-inline: 6px;
    transition: 0.25s background-color;
    border-radius: 4px;

    @media (hover: hover) {
        &:hover {
            background-color: var(--color-gray);
        }
    }

    &__container {
        @mixin flex-center;
        width: 100%;
        height: 100%;
    }
}